<?xml version="1.0"?>
<data inherit_id="stock.report_picking" priority="50">

  <xpath expr="//div[@t-if='o.origin']/.." position="replace">
    <style>
      .info_table {
        margin-top: 20px;
      }
      .first_col {
        width: 44%;
      }
      .second_col {
        width: 56%;
      }
    </style>
    <div class="table info_table" id="info">

      <div class="row">
        <t t-if="o.picking_type_id.id == 12">
          <div class="first_col col">
            <strong>Fertigungsauftrag <span t-field="o.origin"/>
            </strong>
          </div>
          <div class="second_col col">
            <strong>Produkt <span/>
            </strong>
            <span t-field="o.group_id.mrp_production_ids.product_id"/>
          </div>
        </t>
        <t t-if="o.picking_type_id.id != 12">
          <div class="first_col col">
            <strong>Bestellung <span t-field="o.origin"/>
            </strong>
          </div>
          <div class="second_col col"></div>
        </t>
      </div>
      <div class="row">
        <div class="col">Status: <span t-field="o.state"/>
        </div>
        <div class="col">Datum: <span t-field="o.scheduled_date" t-options='{"widget": "date"}'></span>
        </div>
      </div>

      <div class="row">
        <div class="col">Typ: <span t-field="o.picking_type_id.code"/>
        </div>

        <t t-if="o.picking_type_id.id != 12">
          <div class="col">Ausliefermethode: <span t-field="o.carrier_id"></span>
          </div>
        </t>
        <t t-if="o.picking_type_id.id == 12">
          <div class="col"></div>
        </t>
      </div>

    </div>

  </xpath>
</data>