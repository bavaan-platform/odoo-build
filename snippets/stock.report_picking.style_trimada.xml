<?xml version="1.0"?>
<data inherit_id="stock.report_picking" priority="60">

	<xpath expr="//div[hasclass('page')]" position="before">
		<style>
		  table.trimada {
				font-size: 9pt;
				font-family: arial;
				color: black;
			}
			table.address_block {
				font-size: 11pt;
				font-family: arial;
				width: 100%;
				margin-left: 5px;
				margin-top: 30px;
			}	
			table.address_block td {
				width: 50%;
			}	
			table.trimada tr {
				border-bottom: 1px solid rgb(220,220,220);
			}
			table.trimada thead tr {
				border-top:solid 1px;
				border-bottom: solid 1px;
			}
			table.trimada thead th#position {
				width: 5mm;
			}
			table.trimada thead th#default_code {
			  width: 27mm;
			  text-align: right;
			}
			table.trimada thead th#quantity {
			  width: 25mm;
			  text-align: right !important;
			}
			table.trimada thead th#qty_available {
			  width: 25mm;
			  text-align: right;
			  padding-right: 5mm;
			}
			table.trimada tbody td#position {
			  text-align: right;
			}
			table.trimada tbody td#default_code {
			  text-align: right;
			}
			table.trimada tbody td#qty {
			  text-align: right !important;
			}
			table.trimada tbody td#quantity {
			  text-align: right;
			}
			table.trimada tbody td#qty_available {
			  text-align: right;
			  padding-right: 5mm;
			}
			table.trimada tbody span#qty {
			  font-weight: bold;
			}
			table.trimada tbody span#qty_available {
			  font-weight: bold;
			}
			.address {
			  font-size: 10pt;
			  line-height: 1.2;
			  padding-bottom:33mm;
			}
			.subtitel {
				font-size: 11pt;
				font-family: arial;
				margin-top: 10mm;
			}
			.note {
				font-size: 9pt;
				font-family: arial;
			}
		</style>
	</xpath>
	
	<xpath expr="//table[4]" position="attributes">
		<attribute name="class" separator=" " add="trimada table-borderless"/>
	</xpath>
	
</data>
